<com.google.android.setupdesign.GlifLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/setup_wizard_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="@style/SudContentFrame"
        android:layout_marginTop="@dimen/base_margin_top">

        <LinearLayout
            android:id="@+id/page"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/standard"
                android:padding="10dp"
                android:background="@drawable/garlic_level_background_focused"
                android:focusable="true"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <ImageView
                    android:id="@+id/ic_standard"
                    android:src="@drawable/ic_shield"
                    android:layout_marginHorizontal="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/standard_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/ic_standard"
                    android:text="@string/security_level_standard_title"
                    android:textStyle="bold"
                    android:textColor="?android:textColorPrimary"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/standard_title"
                    android:layout_toEndOf="@id/ic_standard"
                    android:textColor="?android:textColorPrimary"
                    android:text="@string/security_level_standard_desc" />

                <requestFocus/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/safer"
                android:padding="10dp"
                android:focusable="true"
                android:clickable="true"
                android:background="@drawable/garlic_level_background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <ImageView
                    android:id="@+id/ic_safer"
                    android:src="@drawable/ic_shield_plus"
                    android:layout_marginHorizontal="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/safer_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/ic_safer"
                    android:text="@string/security_level_safer_title"
                    android:textStyle="bold"
                    android:textColor="?android:textColorPrimary"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/safer_title"
                    android:layout_toEndOf="@id/ic_safer"
                    android:textColor="?android:textColorPrimary"
                    android:text="@string/security_level_safer_desc" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/safest"
                android:padding="10dp"
                android:focusable="true"
                android:clickable="true"
                android:background="@drawable/garlic_level_background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <ImageView
                    android:id="@+id/ic_safest"
                    android:src="@drawable/ic_shield_plus_center"
                    android:layout_marginHorizontal="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/safest_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/ic_safest"
                    android:text="@string/security_level_safest_title"
                    android:textStyle="bold"
                    android:textColor="?android:textColorPrimary"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/safest_title"
                    android:layout_toEndOf="@id/ic_safest"
                    android:textColor="?android:textColorPrimary"
                    android:text="@string/security_level_safest_desc" />
            </RelativeLayout>
        </LinearLayout>

        <org.lineageos.setupwizard.NavigationLayout
            android:id="@+id/navigation_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
</com.google.android.setupdesign.GlifLayout>
